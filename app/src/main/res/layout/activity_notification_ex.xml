<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AndroidCore.NotificationEx">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="send notification"
        android:id="@+id/notify_button"/>

    <Button
        android:id="@+id/notify_action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="send action button notification"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notify_button"
        app:layout_constraintVertical_bias="0.045"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/notify_respond_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="response notification"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notify_button"
        app:layout_constraintVertical_bias="0.137"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/notify_fullscreen_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="full screen notification"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notify_button"
        app:layout_constraintVertical_bias="0.233"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>